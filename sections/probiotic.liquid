<style>
  #shopify-section-{{ section.id }}{
    background-color:{{- section.settings.bg -}};
    
  }
</style>
<section class="survey--section" id="{{ section.settings.custom-id }}">
            <div class="container">
                <div class="survey__main">
                    <h2>{{ section.settings.survey-head }}</h2>
                    <div class="survey__image">
                        <img src="{{ section.settings.survey-img | img_url: 'master' }}" alt="Survey img">
                    </div>
                    <div class="featured__cta survey">
                        <a href="{{ section.settings.red-btn }}" class="btn-pet short">{{ section.settings.red-text }}</a>
                    </div>
                    {{ section.settings.survey-p }}
                </div>
            </div>
        </section>
{% schema %}
  {
    "name": "Probiotic section",
    "settings": [
      {
        "type": "color",
        "id": "bg",
        "label": "background colour"
      },
      {
        "type": "text",
        "id": "custom-id",
        "label": "Custom Id"
      },
      {
        "type": "text",
        "id": "survey-head",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "survey-img",
        "label": "Survey image"
      },
      {
        "type": "url",
        "id": "red-btn",
        "label": "button url"
      }, 
      {
        "type": "text",
        "id": "red-text",
        "label": "button text"
      },
      {
        "type": "richtext",
        "id": "survey-p",
        "label": "Paragraph",
        "default": "<p>Add text<p>"
      }
    ],
        "presets": [
      {
        "name": "Probiotic section"
      }
    ]
  }
{% endschema %}
<style>
  .survey--section {
        padding-bottom: 5rem;
        padding-top: 5rem;
    }


        font-weight: 700;
        text-align: center;
        margin: 0;
        letter-spacing: normal;
      font-family: 'Inter', sans-serif;
    }

    .survey__image {
        width: 100%;
        padding-bottom: 2vw;
        line-height: 0px;
    }

    .survey__main p {
        font-size: 14px;
        text-align: center;
        padding-bottom: 2vw;
        line-height: 22px;
        font-style: italic;
        margin: 0;
      font-family: 'Inter', sans-serif;
    }
    .featured__cta.survey {
        text-align: center;

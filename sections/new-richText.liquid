{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
h2.orderNowHead.mainHeading {
    font-weight: 900;
}.topHeadPart p {
    MARGIN: 10px auto 40px;
    max-width: 600px;
    text-align: center;
} .orderTopHead { 
    align-items: center;
    margin-bottom: 10px; 
    text-align: center;
}.orderTopHead h3 {    margin: 0; 
    font-size: 1.4em;
}.announcementAB p {
    margin: 0 auto;
    max-width: 90%;
}.announcementAB {
    max-width: 800px;
    background-color: #fdfcda;
    border: 2px dashed #f64141;
    padding: 25px 20px;
    display: block;
    margin: 0 auto 50px;
    text-align: center;margin-top: -18px;
}.announcementAB p:has(strong) {
    margin-bottom: 10px;
}.orderNowHead {
    text-align: center;
    margin-top: 0;
    margin-bottom: 0;
    font-size: 1.5em;
    font-weight: normal;
}
</style>
<section class="shopify-section section section-{{ section.id }}-padding" style="padding-left:20px;padding-right:20px;">
<div class="topHeadPart">
<h2 class="orderNowHead blackHeading">{{ section.settings.subheading | replace:'[location]','<span class="locationArea"></span>'}}</h2>
<h2 class="orderNowHead mainHeading" style="color:{{ section.settings.headingColor }} !important">{{ section.settings.heading }}</h2>
<p>{{ section.settings.text }}</p>


{% if section.settings.announcement != blank %}
<div class="announcementAB">
  {{ section.settings.announcement  | replace:'[location]','<span class="locationArea"></span>' }}
</div>
{% endif %}
</div>  
</section>



{% schema %}
  {
    "name": "New Rich Text Section",
    "settings": [
       {
      "type":"color",
      "id":"headingColor",
      "label":"Heading Color",
      "default":"#000000"
    },
      {
        "type":"richtext",
        "id":"announcement",
        "label":"Announcement"
      }, 
      {
        "type":"html",
        "id":"subheading",
        "label":"SubHeading",
        "default":"GET 30% OFF TODAY.",
        "info":"use [location] to add city name"
      },
      {
        "type":"text",
        "id":"heading",
        "label":"Heading",
        "default":"NO COUPON CODE NEEDED."
      },
      {
        "type":"textarea",
        "id":"text",
        "label":"Text",
        "default":"Hurry! This special offer is only available while supplies last. 30% discount will be automatically applied. Order now to secure your device."
      },
          {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "presets":[
      {
        "name":"New Rich Text Section"
      }
    ]
  }
{% endschema %} 
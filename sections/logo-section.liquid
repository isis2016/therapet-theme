<style>
 .mainWrapTop{
   width:100%;margin:0 0 50px;
   background-size:cover;background-position:center;
 } .wrapTextMain {
    padding: 20px 0 0;
} .logoBlockMainSec {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 50px 0 100px;
}.logoBlockMainSec strong {
    font-weight: 900;
    color: black;
    font-size: 1.5em;
}.logoItem img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    max-height: 30px;
}.logoItem {
    min-width: 200px;
    margin-bottom: 20px;
    display: flex;
}p.mainHeading.bundleUpC {
    padding: 5px 20px;
    display: block;
    width: fit-content;
    font-size: 0.9em;
    font-weight: 600;
    border-radius: 25px;
}
@media(min-width:1300px)
  {
    .wrapTextMain {
    padding-top: 70px !important;
}
  }
  @media(max-width:767px)
  {
    .class{{section.id}} .rightSideMain img {
width:{{section.settings.sizeA }}% !important;
    margin: auto;
    display: block;
}
    .logoItem {
    min-width: 100px;
 width:50%
}.logoBlockMainSec { 
    align-items: center;
    justify-content: center; 
}.logoItem img { 
    max-height: 20px;
}.logoItem:has(strong) {
    width: 100%;
}.logoItem img { 
    object-position: left;
}
  .logoBlockMainSec { 
    padding: 30px 0 20px;
}.logoItem {
    display: flex;
    align-items: center;
    justify-content: center;
}.logoItem img {
    object-position: center;
}
  }
</style>
<section class="mainWrapTop class{{ section.id }}">
  <div class="page-width">  
{% if section.blocks.size > 0 %}
<div class="logoBlockMainSec">
<div class="logoItem">
<strong>{{ section.settings.featured }}</strong>
</div>
{% for block in section.blocks %}
<div class="logoItem">
<img src="{{ block.settings.logo | img_url: '400x'}}" loading="lazy"  width="100%" height="100%" alt="{{ block.settings.logo.alt }}">
</div>
{% endfor %}
</div>
{% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Logo Section",
    "settings": [
    
      {
        "type":"text",
        "id":"featured",
        "label":"Featured In Text",
        "default":"Featured In:"
      }
    ],
    "blocks":[
      {
        "type":"image",
        "name":"Logo",
        "settings":[
          {
            "type":"image_picker",
            "id":"logo",
            "label":"Logo"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"Logo Section"
      }
    ]
  }
{% endschema %} 
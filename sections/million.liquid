<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


<div class="million-section {{ section.settings.section_css_class }}">
  <div class="page-width">
    <h2>{{ section.settings.million-head }}</h2>
    <div class="million-wrap multiple-items">
      {% for block in section.blocks %}
        <div class="million-cover">
        <div class="million-content">
          <div class="million-rating">
            <img src="{{ block.settings.rating-img | img_url: 'master' }}" alt=" Rating img">
          </div>
          {{ block.settings.million-text }}
          <div class="million-info">
          <h6>{{ block.settings.million-h6 }}</h6>
          <div class="million-btn">
            <a href="{{ block.settings.million-link }}">{{ block.settings.million-btn }}</a>
          </div>
          </div>
        </div>
        <div class="million-tip">
          <img src="{{ block.settings.tooltip-img | img_url: 'master' }}" alt=" Tooltip img">
        </div>
        <div class="million-image">
           <img src="{{ block.settings.million-img | img_url: 'master' }}" alt=" Million img">
        </div>          
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "million section",
    "settings": [
      {
        "type": "text",
        "id": "million-head",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "section_css_class",
        "label": "Custom Class"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "review column",
        "settings": [
      {
        "type": "image_picker",
        "id": "rating-img",
        "label": "Rating image"        
      },
      {
        "type": "richtext",
        "id": "million-text",
        "label": "Text",
        "default": "<p>Add text<p>"
      },
      {
        "type": "text",
        "id": "million-h6",
        "label": "Name"
      },
      {
        "type": "text",
        "id": "million-btn",
        "label": "Button text"
      },      
      {
        "type": "url",
        "id": "million-link",
        "label": "Button link"
      },
      {
        "type": "image_picker",
        "id": "tooltip-img",
        "label": "Tool Tip image"        
      },    
      {
        "type": "image_picker",
        "id": "million-img",
        "label": "Million image"        
      }
        ]
      }
    ],
    "presets": [
      {
        "name": "million section"
      }
    ]
  }
{% endschema %}
<style>
  .million-section {
    padding: 100px 0px 90px 0px;
}
  .million-section h2 {
    margin: 0px auto 50px;
    color: #37306B;
    text-align: center;
    font-family: AvertaStd-ExtraBold;
    font-size: 50px;
    font-style: normal;
    font-weight: 400;
    line-height: 60px;
    width: 70%;
}
  .million-wrap {
    width: 100%;
    margin: 0 auto;
}
  .million-cover {
    /* width: 31%!important; */
    margin-right: 40px;
    position: relative;
}
  .million-cover:last-child {
    margin-right: 0px;
}
  .million-content {
    border-radius: 15px;
    border: 1px solid #BEC8FD;
    background: #FFF;
    padding: 25px 30px 25px 25px;
    margin-bottom: 33px;
    filter: drop-shadow(0px 10px 54px rgba(0, 0, 0, 0.05));
}
  .million-rating {
    width: 35%;
    height: auto;
    line-height: 0px;
    margin-bottom: 15px;
}
  .million-content p {
    margin: 0px;
    color: #37306B;
    font-family: Poppins;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 30px;
    margin-bottom: 15px;
}
  .million-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
  .million-info h6 {
    margin: 0px;
    color: #37306B;
    font-family: AvertaStd-Bold;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 30px;
}
  .million-info a {
    border-radius: 25px;
    background: #50B27F;
    padding: 6px 24px;
    color: #FFF;
    font-family: Poppins;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 30px;
    text-decoration: none;
}
  .million-tip {
    position: absolute;
    bottom: 5.2em;
    width: 6%;
    height: auto;
    left: 1.5em;
    filter: drop-shadow(0px 10px 54px rgba(0, 0, 0, 0.05));
}
  .million-image {
    width: 21%;
    height: auto;
    line-height: 0px;
}
.change--background {
    background: #DBE1FF;
}

  @media (max-width: 1280px) {
    .million-tip {
    bottom: 4.5em;
}
  .million-info a {
    padding: 6px 15px;
}
  }
  @media (max-width: 1100px) {
    .million-section {
    padding: 80px 0px;
}
    .million-section h2 {
    margin: 0px 0px 25px;
    font-size: 40px;
    line-height: 50px;
    width: 100%;
}
    .million-wrap {
    width: 100%;
    column-gap: 20px;
}
    .million-cover {
    /* width: 32%!important; */
    margin-right: 15px;
}
    .million-rating {

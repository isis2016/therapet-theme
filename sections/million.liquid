  }
  @media (max-width: 992px) {
    .million-section h2 {
    margin: 0px 0px 20px;
    font-size: 30px;
    line-height: 40px;
}
    .million-cover {
    /* width: 6.87%!important; */
    margin: 1px 7px;
}
    .million-content p {
    font-size: 15px;
}
    .million-info h6 {
    font-size: 16px;
}
    .million-rating {
    width: 25%;
}
    .million-tip {
    bottom: 7.4em;
    width: 3%;
    left: 2.5em;
}
    .million-image {
    width: 20%;
}
    .slick-dots {
    list-style: none;
    display: block;
    text-align: center;
    padding: 0;
    margin: 0;
}
    .slick-dots li {
    width: 8px;
    position: relative;
    display: inline-block;
    height: 20px;
    margin: 0 5px;
    padding: 0;
    cursor: pointer;
}
    .slick-dots li button {
    height: 8px;
    padding: 3px;
    color: #37306B;
    border: 0;
    background: transparent;
    display: block;
    width: 20px;
    line-height: 0px;
    font-size: 0px;
    cursor: pointer;
}
    .slick-dots li button::before {
    content: "";  
    position: absolute;
    top: 0;
    left: 0;
    width: 8px;
    height: 8px;
    font-size: 0px;
    line-height: 20px;
    text-align: center;
    opacity: 0.41;
    border-radius: 4px;
    background-color: #37306B;
}
    .slick-active button::before {
    background-color: #37306B!important;
    width: 10px;
    height: 10px;
}
  .change--background .million-tip {
    bottom: 6.8em;
    width: 4%;
}
  }
  @media (max-width: 767px) {
    .million-section {
    padding: 40px 0px;
}
    .million-section h2 {
    margin: 0px 0px 25px;
      font-family: AvertaStd-Bold;
}
  .million-wrap {
    width: 90%;
    margin: 0 auto;
}
  .million-content {
    padding: 20px;
    box-shadow: 0 0 4px 1px #0000002b;
    filter: none;
}
  .million-rating {
    width: 120px;
}
  .million-content p {
    font-size: 14px;
    line-height: 22px;
    font-weight: 500;
}
  .million-info a {
    font-size: 14px;
}
  .million-image {
    width: 80px;
}
    .million-cover {
    /* width: 14%!important; */
    margin: 0px 5px;
}
  .million-tip {
    bottom: 5.2em;
    width: 7%;
    left: 50%;
    transform: translate(-50%, 0);
}
  .million-image {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
  .million-image img {
    width: 80px;
}
   
    .change--background .million-tip {
    bottom: 4.5em;
    left: 1.3em;
}
  }
</style>
<script> 
  $('.multiple-items').slick({
  infinite: true,
  slidesToShow: 3,
  slidesToScroll: 1,
    arrows: false,
    responsive: [
        {
            breakpoint: 992,
            settings: {
                infinite: true,
                dots: true,
                slidesToShow: 2,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000
            }
        },
        {
        breakpoint: 767,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          centermode: true,
          dots: true,
          infinite: true,
          autoplay: true,
          autoplaySpeed: 2000
        }
      }
  ]
});
</script>
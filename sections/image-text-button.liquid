<style>
.contentITB {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.leftITB {
    width: 40%;
    margin: 30px 10px;
}
.imageITB {
    width: 100%;
    border-radius: 15px;
}

.rightITB {
    width: 60%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-left: 30px;
    margin-top: 20px;
    margin-bottom: 20px;
}
}
.headingITB {
    color: black;
    margin: 10px 0px;
}
.buttonITB {
    width: 100%;
    border-radius: 5px;
    margin: 10px 0px 0px 0px;
    padding: 15px 10px;
    box-shadow: rgb(0, 51, 14) 0px 0px 0px 1px;
    color: white;
    font-size: 22px;
    font-weight: 700;
    border: none;
    cursor: pointer;
    text-decoration: none;
}
.richtextITB {
    width: 100%;
    color: rgb(0, 0, 0);
    line-height: 1.5;
    margin: 0px 0px 20px;
    padding: 0px;
    text-shadow: transparent 0px 0px 0px;
    font-size: 15px;
    text-align: center;
}
.rightITB p{
    font-size: 15px;
}


@media (max-width: 800px){
.contentITB {
    flex-direction: column;
}
.leftITB {
    width: 100%;
    margin: 0;
}
.rightITB {
    width: 100%;
    margin-left: 0px;
}
}
</style>


<section class="mainITB" style="background-color:{{ section.settings.bgcolor }}">

<div class="page-width contentITB">
<div class="leftITB">
  <img class="imageITB lazyload"
       src="{{ section.settings.img | img_url: 'master' }}"
       alt="{{ section.settings.img.alt | escape }}"
       width="100%" height="100%"/>
</div>

<div class="rightITB">
  <h3 class="headingITB">{{ section.settings.heading }}</h3>
  <p class="richtextITB">{{ section.settings.richtext }}</p>

  <a class="buttonITB" style="background: linear-gradient(to bottom, {{ section.settings.buttoncolorone }}, {{ section.settings.buttoncolortwo }})!important;" href="{{ section.settings.buttonlink }}">{{ section.settings.buttontext }}</a>
  <p class="subtextITB">{{ section.settings.subtext }}</p>
</div>
</div>

</section>


{% schema %}
  {
    "name": "Image, Text & Button",
    "settings": [
      {
        "type": "color",
        "id": "bgcolor",
        "label": "Background Color"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "richtext",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "buttoncolorone",
        "label": "1st Button Color"
      },
      {
        "type": "color",
        "id": "buttoncolortwo",
        "label": "2nd Button Color"
      },
      {
        "type": "text",
        "id": "buttontext",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "buttonlink",
        "label": "Button Link"
      },
      {
        "type": "richtext",
        "id": "subtext",
        "label": "Sub-text"
      }
    ],
    "presets": [{"name": "Image, Text & Button"}]
  }
{% endschema %}
<div class="sale-bar-section">
  <div class="sale-bar-width page-width">
    <div class="sale-bar-top">
      <div class="sale-bar">
      {% if section.settings.early-sale-img != blank %}
    <div class="sale-one"><img src="{{ section.settings.early-sale-img | img_url: 'master' }}" alt="Early Sale" loading="lazy"></div>
      {% endif %}
      {% if section.settings.friday-sale-img != blank %}
    <div class="sale-two"><img src="{{ section.settings.friday-sale-img | img_url: 'master' }}" alt="Friday Sale" loading="lazy"></div>
      {% endif %}
    <span class="line first-line"></span>
    {{ section.settings.bar-p }}
    <span class="line"></span>

        {% if section.settings.show-countdown %}
    {% render 'countdown' %}
          {% endif %}
    <div class="second-bar-img"><img src="{{ section.settings.pet-dog-img | img_url: 'master' }}" alt="Pet Dog" loading="lazy"></div>
    </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Sale Bar",
    "settings": [
      {
        "type": "image_picker",
        "id": "early-sale-img",
        "label": "Early Sale Image"
      },
      {
        "type": "image_picker",
        "id": "friday-sale-img",
        "label": "Friday Sale Image"
      },
      {
        "type": "richtext",
        "id": "bar-p",
        "label": "Paragraph",
        "default": "<p>Add text<p>"
      },
      {
        "type": "image_picker",
        "id": "pet-dog-img",
        "label": "Pet Dog Image"
      },
  {
      "type": "checkbox",
      "id": "show-countdown",
      "label": "Show Countdown",
      "default": false
    },
    {
      "type" : "text",
      "id" : "month",
      "label" : "Month",
      "default" : "December"
    },
    {
      "type" : "text",
      "id" : "day",
      "label" : "Day",
      "default" : "17"
    },
    {
      "type" : "text",
      "id" : "year",
      "label" : "Year",
      "default" : "2021"
    },
    {
      "type" : "text",
      "id" : "time",
      "label" : "Time",
      "default" : "17:00:00",
      "info":"HH:MM:SS"
    }
    ],
        "presets": [
      {
        "name": "Sale Bar"
      }
    ]
  }
{% endschema %}
<style>
  .sale-bar-section {
    /* background: linear-gradient(106deg, #DCE2FF 14.88%, #E4F1FF 56.57%, #f3f0f9 89.68%); */
    background: #fff;
    padding-top: 5px;
}
  .sale-bar-section img {
    width: 100%;
  }
  .sale-bar-top {
    background: #f5c1c0;
  }
  .sale-bar {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
  .sale-one {
    line-height: 0px;
    width: 6%;
}
  .sale-two {
    line-height: 0px;
    width: 30%;
}
  .second-bar-img{
    line-height: 0px;
    width: 21%;
}
  .line {
    display: flex;
    background-image: linear-gradient(180deg, rgba(255, 255, 255, 0.00) 0%, #FFF 46.35%, rgba(255, 255, 255, 0.00) 100%);
    width: 2px;
    height: 33px;
    margin: 0 1rem;
}
  .sale-bar p {
    color: #fff;
    font-size: 1rem;
    line-height: 1.5rem;
    margin: 0px;
    width: 5%;
    text-align: center;
}
  @media (max-width: 1100px) {
    .sale-bar-width.page-width {
    padding: 0rem 0.625rem;
}
    .sale-bar p {
      width: 7%;
}
  }
  @media (max-width: 992px) {
    .sale-bar-top {
      padding: 5px 0px;
}
    .sale-bar {
    justify-content: center;
}
    .sale-bar p {
      width: 9%;
}
    .second-bar-img {
      display: none;
}
    .sale-bar-width.page-width {
    padding: 0rem;
}
    .sale-two {
      width: 50%;
}
  }
  @media (max-width: 767px) {
    .sale-two {
    width: 100%;
}
    .sale-bar {
    flex-flow: wrap;
}
    span.line.first-line {
      display: none;
}
    .line {
    width: 1px;
    height: 23px;
    margin: 0 0.5rem;
}
  }
</style>
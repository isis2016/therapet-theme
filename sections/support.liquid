<div class="support-section {{ section.settings.section_css_class }}">
  <div class="page-width">
    <div class="support__head">
      <h3>{{ section.settings.subheading }}</h3>
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="support-wrap">
       <div class="support-cont">
         {% for block in section.blocks %}
         <div class="support-item">
            <img src="{{ block.settings.support-icon | img_url: 'master' }}" alt="Support Icon">
            <h4>{{ block.settings.support-head }}</h4>
            {{ block.settings.support-text }}
         </div>
         {% endfor %}
       </div>
       <div class="support-img">
          <img src="{{ section.settings.support-image | img_url: 'master' }}" alt="Support Image">
       </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Support section",
    "settings": [
      {
        "type": "text",
        "id": "section_css_class",
        "label": "Custom Class"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "support-image",
        "label": "Support Image"
      }  
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Support block",
        "settings": [
      {
        "type": "image_picker",
        "id": "support-icon",
        "label": "Icon"        
      },   
      {
        "type": "text",
        "id": "support-head",
        "label": "Support Heading"
      },
      {
        "type": "richtext",
        "id": "support-text",
        "label": "Support Content"
      }
        ]
      }
    ],
        "presets": [
      {
        "name": "Support section"
      }
    ]
  }
{% endschema %}
<style>
.support-section{
    padding:100px 0;
}
.support-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.support-cont {
    width: 49%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    row-gap: 7px;
}
.support-img img {
    width: 100%;
}
.support-img {
    width: 48%;
    height: auto;
}
.support-item img {
    width: 50px;
    border-radius: 50%;
    height: auto;
}
.support-item {
    border-radius: 10px;
    background: #E5F1FF;
    padding: 30px 20px;
    width: 49.5%;
    display: flex;
    gap: 10px;
    flex-direction: column;
}
.support-item h4 {
    color: #38306A;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 30px;
    font-family: AvertaStd-ExtraBold;
    margin: 0;
}
.support-item p {
    color: #555;
    font-family: Poppins;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;
    margin: 0;
}
.support__head {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    margin-bottom: 50px;
}
.support__head h3 {
    color: #50B27F;
    font-size: 22px;
    font-weight: 700;
    text-transform: uppercase;
    margin: 0;
}
.support__head h2 {
    color: #37306B;
    text-align: center;
    font-family: Poppins;
    font-size: 50px;
    font-style: normal;
    font-weight: 700;
    line-height: 60px;
    margin: 0;
    width: 58%;
}
    @media (max-width: 1100px) {
      .support__head {
    gap: 15px;
    margin-bottom: 25px;
}
      .support-section {
    padding: 80px 0;
}
      .support__head h3 {
    font-size: 20px;
}
      .support__head h2 {
    font-size: 40px;
    line-height: 50px;
    width: 80%;
}
      .support-wrap {
    flex-wrap: wrap;
}
      .support-cont {
    width: 85%;
    margin: 0 auto;
    margin-bottom: 25px;
}
      .support-img {
    width: 100%;
}
    }
  @media (max-width: 992px) {
    .support__head {
    gap: 15px;
    margin-bottom: 20px;
}
    .support__head h3 {
    font-size: 16px;
}
    .support__head h2 {
    font-size: 30px;
    line-height: 40px;
}
    .support-cont {
    width: 100%;
}
    .support-item {
    width: 49%;
}
  }
  @media (max-width: 767px) {
    .support-section {
    padding: 36px 0;
}
    .support__head h2 {
    width: 100%;
}
    .support-cont {
    flex-wrap: wrap;
}
    .support-item {
    width: 100%;
}
  }
</style>
<script>
function removeClassOnLoad() {
  var screenWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
  var divElement = document.querySelector('.page-width.new-pw');

  if (screenWidth <= 1880 && divElement) {
    divElement.classList.remove('new-pw');
  }
}

document.addEventListener('DOMContentLoaded', removeClassOnLoad);

</script>
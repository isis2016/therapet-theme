<div class="vet-section">
  <div class="page-width new-pw">
    <div class="vet-wrap">
      <div class="pet-vet-image desktop">
      <img src="{{ section.settings.pet-img | img_url: 'master' }}" alt=" Pet img">
      </div>
      <div class="pet-vet-image mobile">
      <img src="{{ section.settings.pet-img-mb | img_url: 'master' }}" alt=" Pet img">
      </div>
      <div class="vet-content">
        <h3>{{ section.settings.vet-head }}</h3>
        <div class="vet-text">{{ section.settings.vet-text }}</div>
        <div class="vet-info-wrap">
          <div class="vet-image">
            <img src="{{ section.settings.vet-img | img_url: 'master' }}" alt=" Vet img">
          </div>
          <div class="vet-info">
            <h6>{{ section.settings.vet-h6 }}</h6>
            <p>{{ section.settings.vet-p }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "vet section",
    "settings": [
      {
        "type": "image_picker",
        "id": "pet-img",
        "label": "Main image"
      }, 
      {
        "type": "image_picker",
        "id": "pet-img-mb",
        "label": "Main mobile image"
      },
      {
        "type": "text",
        "id": "vet-head",
        "label": "Heading"
      },      
      {
        "type": "richtext",
        "id": "vet-text",
        "label": "Text",
        "default": "<p>“As a vet, I only wantthe very best for my patients - therefore, Itrust and recommend PetLab Co.”<p>"
      },
      {
        "type": "image_picker",
        "id": "vet-img",
        "label": "Vet image"
      },      
      {
        "type": "text",
        "id": "vet-h6",
        "label": "Name"
      },      
      {
        "type": "text",
        "id": "vet-p",
        "label": "Profession"
      }
    ],
        "presets": [
      {
        "name": "vet section"
      }
    ]
  }
{% endschema %}

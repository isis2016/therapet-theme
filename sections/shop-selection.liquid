<div class="shop-section">
  <div class="page-width">
    <h2>{{ section.settings.shop-head }}</h2>
    <div class="collection-wrap">
        {% for block in section.blocks %}
           <a class="shop-collection" href="{{ block.settings.shop-link }}">
             <div class="shop-image">
               <img src="{{ block.settings.shop-img | img_url: 'master' }}" alt="Collection img">
            </div>
            <div class="shop-wrap">
               <h5>{{ block.settings.shop-p }}</h5>
               <div class="arrow-icon">
                 <img src="{{ block.settings.arrow-img | img_url: 'master' }}" alt=" Arrow icon">
               </div>
             </div>
           </a>
        {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "shop selection",
    "settings": [
      { 
        "type": "image_picker",
        "id": "bg-img",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "shop-head",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "collection column",
        "settings": [
      { 
        "type": "url",
        "id": "shop-link",
        "label": "Collection link"
      },
      { 
        "type": "image_picker",
        "id": "shop-img",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "shop-p",
        "label": "Paragraph"
      },
      { 
        "type": "image_picker",
        "id": "arrow-img",
        "label": "Icon"
      }
        ]
      }
    ],
        "presets": [
      {
        "name": "shop selection"
      }
    ]
  }
{% endschema %}
<style>
  img {
    width: 100%;
    height: 100%;
}
  .shop-section {
    background-image: url("{{ section.settings.bg-img | img_url: 'master' }}");
    background-repeat: no-repeat;
    padding: 96px 0px 172px 0px;
    background-size: cover;
}
  .shop-section h2 {
    margin: 0px 0px 50px 0px;
    color: #FFF;
    text-align: center;
    font-family: AvertaStd-ExtraBold;
    font-size: 50px;
    font-style: normal;
    font-weight: 400;
    line-height: 80px;
}
  .shop-collection {
    text-decoration: none;
}
  .collection-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
}
  .shop-image {
    margin: 0px auto 29px auto;
    width: 95%;
    height: auto;
    line-height: 0px;
}
  .shop-wrap {
    display: flex;
    justify-content: center;
    align-items: baseline;
    column-gap: 30px;
}
  .shop-wrap h5 {
    margin: 0px;
    color: #FFF;
    font-family: AvertaStd-Bold;
    font-size: 30px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}
  .arrow-icon {
    width: 3%;
    height: auto;
    line-height: 0px;
}

  @media (max-width: 1100px) {
    .shop-section {
    padding: 80px 0px 160px 0px;
}
    .shop-section h2 {
    margin: 0px 0px 25px 0px;
    font-size: 40px;
    line-height: 50px;
}
    .shop-image {
    margin: 0px auto 20px auto;
}
    .shop-wrap h5 {
    font-size: 20px;
}
    .shop-wrap {
    align-items: flex-start;
    column-gap: 20px;
}
    .arrow-icon {
    width: 4%;
}
  }
  @media (max-width: 992px) {
    .shop-section h2 {
    margin: 0px 0px 20px;
    font-size: 30px;
    line-height: 40px;
}
    .shop-wrap {
    align-items: center;
}
  }
  @media (max-width: 767px) {
    .shop-section {
    padding: 40px 0px 215px 0px;
}
    .shop-section h2 {
    margin: 0px 0px 25px;
      font-family: AvertaStd-Bold;
}
    .collection-wrap {
    flex-wrap: wrap;
}
    .shop-collection:first-child {
    margin-bottom: 25px;
}
    .shop-image {
    width: 90%;
      margin: 0 auto 20px;
}
    .shop-wrap h5 {
    font-size: 20px;
    font-family: 'Poppins';
}
  }
</style>
<style>
  #shopify-section-{{ section.id }}{
    background-color:{{- section.settings.bg -}};
    
  }
</style>
<section class="featured--section {{ section.settings.section_css_class }}" id="{{ section.settings.custom-id }}">
            <div class="container">
                <div class="featured__wrap">
                  {% for block in section.blocks %}
                    <div class="featured__left">
                        <div class="{% if block.settings.hide-featuredhead %} hide {% endif %}"><h2>{{ block.settings.featured-head }}</h2></div>
                        <div class="featured__image {% if block.settings.hide-featuredimg %} hide {% endif %}">
                            <img src="{{ block.settings.featured-img | img_url: 'master' }}" alt=" Featured img" loading="lazy">
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="featured__cta">
                    <a href="{{ section.settings.red-btn }}" class="btn-pet short">{{ section.settings.red-text }}</a>
                </div>
            </div>
        </section>
{% schema %}
  {
    "name": "Featured section",
    "settings": [
      {
        "type": "color",
        "id": "bg",
        "label": "background colour"
      },
      {
        "type": "text",
        "id": "custom-id",
        "label": "Custom Id"
      },
      {
        "type": "url",
        "id": "red-btn",
        "label": "button url"
      }, 
      {
        "type": "text",
        "id": "red-text",
        "label": "button text"
      },
      {
        "type": "text",
        "id": "section_css_class",
        "label": "Custom Class"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "featured",
        "settings": [
      {
        "type": "text",
        "id": "featured-head",
        "label": "Heading"
      },
          {
        "type": "checkbox",
        "id": "hide-featuredhead",
        "label": "Hide heading on mobile",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "featured-img",
        "label": "Featured image"
      },
          {
        "type": "checkbox",
        "id": "hide-featuredimg",
        "label": "Hide image on mobile",
        "default": false
      }
        ]
      }
    ],
        "presets": [
      {
        "name": "Featured section"
      }
    ]
  }
{% endschema %}
<style>
  .featured--section {
        padding-top: 5rem;
        padding-bottom: 5rem;
        height: 100vh;
        display: flex;
        flex-flow: column;
        justify-content: center;
    }

    .featured--section .container {
        padding-left: 3rem;
        padding-right: 3rem;
        max-width: 1440px;
        margin: 0 auto;
        max-height: 800px;
        margin: 0 auto;
    }

    .featured__wrap {
        display: flex;
    }

    .featured__left {
        width: 50%;
        padding-left: 0.75rem;
        padding-right: 0.75rem;
        display: flex;
        flex-flow: column;
        justify-content: space-between;
    }

    .featured__right {
        width: 50%;
        padding-left: 0.75rem;
        padding-right: 0.75rem;
    }

    .featured__wrap h2 {
        font-size: 32px;
        line-height: 32px;
        font-weight: 700;
        text-align: center;
        padding-bottom: 2vw;
        margin: 0px;
        letter-spacing: normal;
      font-family: 'Inter', sans-serif;
    }

    .featured__image {
        width: 100%;
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }

    img {
        width: 100%;
    }

    .featured__cta {
        padding-bottom: 1.5rem;
        width: 100%;
    }

    .featured__cta a {
        font-size: 18px;
        border-radius: 9999px;
        color: #fff;
        background: #cd0053;
        padding: 1rem;
        max-width: 160px;
        display: block;
        text-align: center;
        text-decoration: none;
        margin: 0 auto;
      font-family: 'Inter', sans-serif;
    }
  .featured__image img {
    border-radius: 15px;
} 
  .world .featured__right h2 {
    width: 60%;
    margin: 0 auto;
  }
  @media (max-width: 1100px) {
      .world .featured__right h2 {
    width: 75%;
    margin: 0 auto;
}
  }
   @media (max-width: 767px) {
      .featured__wrap {
    flex-flow: column;
}
     .featured__left {
    width: 100%;
    display: block;
}
     .featured__left:last-child {
    display: none;
}
     .featured__right {
    width: 100%;
    display: none;   
}
     .featured__wrap h2 {
    font-size: 22px;
    line-height: 28px;
    padding-bottom: 0.5rem;
    text-align: left;
}
     .featured--section .container {
    padding: 0 1.5rem;
       max-height: 100%;
}
     .featured__image {
    padding-top: 0rem;
}
   }
  @media (max-width: 360px) {
     .featured--section {
        height: auto;
    }
  }
     
</style>
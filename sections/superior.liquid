<div class="superior-section">
  <div class="page-width">
    <div class="superior-wrap">
      <div class="superior-text">
        <h5>{{ section.settings.superior-h5 }}</h5>
        <h2>{{ section.settings.superior-h2 }}</h2>
        <div class="superior-para">{{ section.settings.superior-p1 }}</div>
        <div class="superior-para">{{ section.settings.superior-p2 }}</div>
        <div class="superior-para">{{ section.settings.superior-p3 }}</div>
        <div class="superior-para">{{ section.settings.superior-p4 }}</div>
        <div class="superior-para">{{ section.settings.superior-p5 }}</div>
        <div class="superior-para">{{ section.settings.superior-p6 }}</div>
      </div>
      <div class="superior-table-wrap">
        {% for block in section.blocks %}
          <table class="superior-table">
            <tr>
              <td class="superior-image">
                <img src="{{ block.settings.table-img | img_url: 'master' }}" alt=" Table img">
              </td>
            </tr>
            <tr>
              <td>
                <p>{{ block.settings.table-p }}</p>
              </td>
            </tr>
            <tr>
              <td class="icon-cover">
                <div class="superior-icon"><img src="{{ block.settings.table-icon1 | img_url: 'master' }}" alt=" Table Icon"></div>
              </td>
            </tr>
            <tr>
              <td class="icon-cover">
                <div class="superior-icon"><img src="{{ block.settings.table-icon2 | img_url: 'master' }}" alt=" Table Icon"></div>
              </td>
            </tr>
            <tr>
              <td class="icon-cover">
                <div class="superior-icon"><img src="{{ block.settings.table-icon3 | img_url: 'master' }}" alt=" Table Icon"></div>
              </td>
            </tr>
            <tr>
              <td class="icon-cover">
                <div class="superior-icon"><img src="{{ block.settings.table-icon4 | img_url: 'master' }}" alt=" Table Icon"></div>
              </td>
            </tr>
            <tr>
              <td class="icon-cover">
                <div class="superior-icon"><img src="{{ block.settings.table-icon5 | img_url: 'master' }}" alt=" Table Icon"></div>
              </td>
            </tr>
            <tr>
              <td class="icon-cover">
                <div class="superior-icon"><img src="{{ block.settings.table-icon6 | img_url: 'master' }}" alt=" Table Icon"></div>
              </td>
            </tr>
          </table>
        {% endfor %}  
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "superior section",
    "settings": [
      {
        "type": "image_picker",
        "id": "superior-back-img",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "superior-h5",
        "label": "Heading"
      }, 
      {
        "type": "text",
        "id": "superior-h2",
        "label": "Main Heading"
      },
      {
        "type": "richtext",
        "id": "superior-p1",
        "label": "Text",
        "default": "<p>Add text<p>"
      },
      {
        "type": "richtext",
        "id": "superior-p2",
        "label": "Text",
        "default": "<p>Add text<p>"
      },
      {
        "type": "richtext",
        "id": "superior-p3",
        "label": "Text",
        "default": "<p>Add text<p>"
      },
      {
        "type": "richtext",
        "id": "superior-p4",
        "label": "Text",
        "default": "<p>Add text<p>"
      },
      {
        "type": "richtext",
        "id": "superior-p5",
        "label": "Text",
        "default": "<p>Add text<p>"
      },
      {
        "type": "richtext",
        "id": "superior-p6",
        "label": "Text",
        "default": "<p>Add text<p>"
      }      
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Table column",
        "settings": [
      {
        "type": "image_picker",
        "id": "table-img",
        "label": "Table image"        
      },
      {
        "type": "text",
        "id": "table-p",
        "label": "Name"
      },
      {
        "type": "image_picker",
        "id": "table-icon1",
        "label": "Icon"        
      },
      {
        "type": "image_picker",
        "id": "table-icon2",
        "label": "Icon"        
      },
      {
        "type": "image_picker",
        "id": "table-icon3",
        "label": "Icon"        
      },
      {
        "type": "image_picker",
        "id": "table-icon4",
        "label": "Icon"        
      },
      {
        "type": "image_picker",
        "id": "table-icon5",
        "label": "Icon"        
      },
      {
        "type": "image_picker",
        "id": "table-icon6",
        "label": "Icon"        
      }
        ]
      }
    ],
    "presets": [
      {
        "name": "superior section"
      }
    ]
  }
{% endschema %}
<style>
  .superior-section {
    padding: 100px 0px;
    background-image: url("{{ section.settings.superior-back-img | img_url: 'master' }}");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
}
  .superior-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
  .superior-text {
    width: 57%;
}
  .superior-text h5 {
    margin: 0px 0px 30px;
    color: #50B27F;
    font-family: Poppins;
    font-size: 22px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: uppercase;
}
  .superior-text h2 {
    margin: 0px 0px 50px;
    color: #37306B;
    font-family: AvertaStd-Bold;
    font-size: 50px;
    font-style: normal;
    font-weight: 400;
    line-height: 60px;
    text-align: left;
}
  .superior-para {
    margin-bottom: 15px;
}
  .superior-text p {
    margin: 0px;
    color: #37306B;
    font-family: Poppins;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 30px;
    padding: 15px 52px 15px 40px;
    border-radius: 6px;
    background: #FFF;
}
  .superior-table-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    column-gap: 30px;
    width: 40%;
}
  .superior-table {
    border-radius: 20px;
    background: #37306B;
    padding: 11px;
    width: 45%;
}
  tr {
    display: block;
    margin-bottom: 20px;
  }
  .superior-image {
    width: 100%;
    height: auto;
}
  .superior-table p {
    margin: 0px;
    color: #FFF;
    font-family: Poppins;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 30px;
    text-align: center;
}
  td {
    display: block;
}
  .icon-cover {
    width: 60%;
    margin: 0 auto;
    border-bottom: 1px solid #6060606b;
}
  .superior-icon {
    width: 12%;
    height: auto;
    margin: 0 auto;
}
  .superior-table:last-child {
    background: #FFF;
}
  .superior-table:last-child p {
    color: #F675A8;
}
  .superior-table:last-child .icon-cover {
    border-bottom: 1px solid #e1dcdc;
}
    tr:last-child .icon-cover {
    border-bottom: none!important;
}
  

    .superior-icon {
    width: 15%;
}
  }
  @media (max-width: 1100px) {
    .superior-section {
    padding: 80px 0px;
}
    .superior-wrap {
    justify-content: center;
    column-gap: 20px;
}
    .superior-text h5 {
    margin: 0px 0px 15px 0px;
    font-size: 20px;
}
    .superior-text h2 {
    margin: 0px 0px 25px;
    font-size: 40px;
    line-height: 50px;
}
    .superior-text p {
    font-size: 17px;
    line-height: normal;
    padding: 10px;
}
    .superior-table-wrap {
    column-gap: 20px;
    width: 50%;
}
    .superior-table {
    width: 50%;
}
    .superior-table p {
    font-size: 17px;
    line-height: normal;
}
    tr {
    margin-bottom: 25px;
}
    tr:last-child {
    margin-bottom: 0px;
}
    .superior-icon {
    width: 26%;
}
  }
  @media (max-width: 992px) {
    .superior-wrap {
    flex-direction: column;
}
    .superior-text h5 {
    font-size: 16px;
}
    .superior-text h2 {
    margin: 0px 0px 20px;
    font-size: 30px;
    line-height: 40px;
}
    .superior-text {
    width: 100%;
    margin-bottom: 25px;
}
    .superior-text p {
    font-size: 15px;
}
    .superior-table-wrap {
    width: 70%;
}
    .superior-icon {
    width: 15%;
}
    .superior-table p {
    font-size: 15px;
}
  }
  @media (max-width: 767px) {
    .superior-section {
    padding: 40px 0px;
}
    .superior-text h5 {
    text-align: center;
}
    .superior-text h2 {
    margin: 0px 0px 25px;
      text-align: center;
}
    .superior-text p {
    font-size: 16px;
      padding: 15px;
}
    .superior-table-wrap {
    width: 100%;
}
    .superior-table p {
    font-size: 16px;
}
    .superior-icon {
    width: 18px;
}
  }
</style>